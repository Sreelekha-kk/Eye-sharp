<!doctype html>
<html lang="en">
<head>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
  <%- include("./includes/headerPart.ejs") %>
</head>
<%- include("./includes/header.ejs") %>
<body>
  <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="text-center">
      <div class="container w-25 py-5">
        <div class="title pb-5">
          <h2 class="font-weight-bold">Login</h2>
        </div>
        <%
          if (typeof message !== 'undefined') {
        %>
        <h6><%= message %></h6>
        <%
          }
        %>
        <form action="/verifyOtp" method="post">
          <div class="form-group">
            <% if (locals.mobile) { %>
            <input type="text" class="form-control d-none" name="mobile" value="<%= mobile %>">
            <% } %>
            <input type="password" class="form-control" placeholder="Enter OTP" name="otp" required  style="width: 300px;">
            <br>
          </div>
          <button type="submit" class="btn btn-success rounded-pill">Verify</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
