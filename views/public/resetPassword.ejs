<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>eye sharp- Reset Password</title>
    <%- include("./includes/headerPart.ejs") %>   
  </head>
  <body>

  <!-- Header -->
	<%- include("./includes/header.ejs") %>

    <div class="text-center center-div pt-5" id="reset-password">
        <div class="container w-25 py-5 pt-5">
            <div class="logo">
                <img src="../public/images/logo2.png" >
            </div>
            <div class="title pb-5">
                <h5 class="font-weight-bold">Set New Password</h5>
            </div>
    
            <%
                if (typeof message !== 'undefined') {
                    %>
                    <div class="alert alert-info"><%= message %></div>
                    <%
                }
            %>
    
            <form action="/setNewPassword" method="post">
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="New Password" name="newPassword" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Confirm Password" name="confirmPassword" required>
                </div>
                <button type="submit" class="btn btn-success btn-block rounded-pill">Submit</button>
            </form>
        </div>
    </div>

    <%- include("./includes/footer.ejs") %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>
